<view class='placeCenter allBackColor' style="width: 100%;height: 100%;" bindtap='cancelgoyingback'>
  <view class='displayFlexColumn' style="width: 100%;height: 100%;">
    <view style="width: 100%;height: 5vh;"></view>
    <view class='displayFlexRow contentRowClass' style="width: 100%;height: 17vh;">
      <view class='mineTitleClass' style="width: 5%;height: 100%;"></view>
      <view class='mineTitleClass' style="width: 45%;height: 100%;">
        <image src='{{avatarurl}}' style="width: 70px;height: 70px;"></image>
      </view>
      <view class='mineTitleClass' style="width: 50%;height: 100%;font-size:19pt;font-weight:800;">{{nickname}}</view>

    </view>
    <view style="width: 100%;height: 5vh;"></view>

    <view class='placeCenter contentRowClass ' style="width: 100%;height: 8vh;" bindtap='changeMyAddress'>
      <view class='displayFlexRow bottomLineClass' style="width: 95%;height: 100%;" bindtap='changeMyAddress'>
        <view class='placeCenter' style="width: 15%;height: 100%;">
          <image src='/images/mine/address.png' style="width: 20px;height: 20px;"></image>
        </view>
        <view class='mineTitleClass' style="width: 35%;height: 100%;font-size:12pt;">方言地址：</view>

        <picker class='placeCenter' mode="region" bindchange="bindRegionChange" value="{{region}}" custom-item="{{customItem}}" style="width: 50%;height: 100%;font-size:11pt;">{{region[0]}}-{{region[1]}}-{{region[2]}}</picker>

      </view>
    </view>
    <view class='placeCenter contentRowClass' style="width: 100%;height: 8vh;" bindtap='gotoMytermsPage'>
      <view class='displayFlexRow  bottomLineClass' style="width: 95%;height: 8vh;" bindtap=''>
        <view class='placeCenter' style="width: 15%;height: 100%;">
          <image src='/images/mine/terms.png' style="width: 20px;height: 20px;"></image>
        </view>
        <view class='mineTitleClass' style="width: 35%;height: 100%;font-size:12pt;">我的词条：</view>
        <view class='placeCenter' style="width: 50%;height: 100%;font-size:14pt;">{{userNum.mytermnum}}</view>
      </view>
    </view>
    <view class='placeCenter contentRowClass' style="width: 100%;height: 8vh;" bindtap='gotoMyAcordingPage'>
      <view class='displayFlexRow  bottomLineClass' style="width: 95%;height: 8vh;">
        <view class='placeCenter' style="width: 15%;height: 100%;">
          <image src='/images/mine/recording.png' style="width: 20px;height: 20px;"></image>
        </view>
        <view class='mineTitleClass' style="width: 35%;height: 100%;font-size:12pt;">我的方言：</view>
        <view class='placeCenter' style="width: 50%;height: 100%;font-size:14pt;">{{userNum.myrecordingnum}}</view>
      </view>
    </view>
    <view class='placeCenter contentRowClass' style="width: 100%;height: 8vh;" bindtap=''>
      <view class='displayFlexRow ' style="width: 95%;height: 8vh;" bindtap=''>
        <view class='placeCenter' style="width: 15%;height: 100%;">
          <image src='/images/mine/zan.png' style="width: 20px;height: 20px;"></image>
        </view>
        <view class='mineTitleClass' style="width: 35%;height: 100%;font-size:12pt;">我的获赞：</view>
        <view class='placeCenter' style="width: 50%;height: 100%;font-size:14pt;">{{userNum.myallzannum}}</view>
      </view>
    </view>
    <!-- <view class='displayFlexRow borderBottomSolid' style="width: 100%;height: 8vh;" bindtap='gotoMyCollectionPage'>
      <view class='mineTitleClass' style="width: 50%;height: 100%;font-size:12pt;">我的收藏（个）：</view>
      <view class='placeCenter' style="width: 40%;height: 100%;font-size:14pt;">{{userNum.mysharenum}}</view>
      <image class='placeCenter' src='/images/mine/abd.png' style="width: 10%;height: 50%;"></image>
    </view> -->
    <view class='authorClass' style="width: 95%;height: 5vh;font-size:9pt;" bindtap='goying'>关于作者:Goying </view>
    <view class='snClass' style="width: 95%;height: 10vh;font-size:9pt;">软件版本:{{snNum}} </view>
    <view class='snClass' style="width: 95%;height: 28vh;font-size:9pt;"> </view>
  </view>
</view>

<view class='loadingclass' hidden="{{loadingFlag}}" style="width: 50%;height: 36%;">
  <view class='' style="width: 100%;height: 100%;">
    <view class='displayFlexColumn' style="width: 100%;height: 100%;">
      <view class='loadingpictureClass' style="width: 80%;height: 100%; ">
        <image class='placeCenter' src='/images/loading.gif' style="width: 30px;height: 30px;"></image>
      </view>
      <view class='loadingtextClass' style="width: 80%;height: 100%; font-size:16pt;">加载中</view>
    </view>
  </view>
</view>

